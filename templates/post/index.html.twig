{% extends 'base.html.twig' %}

{% block title %}Scrolly{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>Bienvenue sur Scrolly</h1>

    <p>Scrolly est une application de gestion de posts.</p>
    {% for post in posts %}
        <div class="post">
            <h2>{{ post.title }}</h2>
            <p>{{ post.description }}</p>
        </div>
    {% else %}
        <p>Aucun post trouvé.</p>
    {% endfor %}
    {% for user in users %}
        <div class="user">
            <h2>{{ user.pseudo }}</h2>
            <p>{{ user.email }}</p>
        </div>
    {% else %}
        <p>Aucun utilisateur trouvé.</p>
    {% endfor %}
</div>
{% endblock %}
