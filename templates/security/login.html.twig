{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}" />
{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="bodyWrapperLogin">
        <img src="{{ asset('Images/LogoScrolly.svg')}}" alt="Logo" class="logoScrollyLogin" />
        <img src="{{ asset('Images/TypoScrolly.svg')}}" alt="Logo" class="typoScrollyLogin" />
        
        <div class="labelWrapperLogin">
            <div class="emailLabel">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="Entrez votre mail..." required autofocus>
            </div>
            <div class="passwordLabel">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="Mot de passe..." required>
            </div>
            <div class="checkboxLogin">
                    <input type="checkbox" name="_remember_me"> 
                <label>
                    Remember me
                </label>
            </div>
        </div>
        <button class="ConnexionBtnLogin" type="submit">
            Connexion
        </button>
        <button class="logoutBtnLogin">
            <a href="{{ path('app_logout') }}">Logout</a>
        </button>
    </div>
</form>
{% endblock %}
